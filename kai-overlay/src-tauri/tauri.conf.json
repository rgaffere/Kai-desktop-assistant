{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kai-overlay",
  "version": "0.1.0",
  "identifier": "com.kai.overlay",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "kai-overlay",
        "width": 400,
        "height": 200,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "alwaysOnTop": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

}
